{{#each blog-page-number.data}}
<article>
    {{#if image}}
    <img src="{{root}}{{image}}" alt="{{title}}">
    {{/if}}
    <div>
        <h3>
            <a href="{{root}}{{@root.blog-page-number.asBlog}}/{{link}}">{{title}}</a>
        </h3>
        <p>{{{blocks.[0].data.text}}}</p>
        <div>
            {{#if @root.blog-page-number.displayAuthor}}
            <img src="{{root}}{{author.avatar}}" alt="author" width="32" height="32">
            <small>
                {{author.name}}<span>â€¢</span>
            </small>
            {{/if}}
            <small>
                {{dateCreated}}
            </small>
        </div>
    </div>
    <div>
        <span>{{category}}</span>
        <a href="{{root}}{{@root.blog-page-number.asBlog}}/{{link}}">Read more</a>
    </div>
</article>
{{/each}}