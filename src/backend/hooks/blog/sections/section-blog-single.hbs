<!-- section content begin -->
<section>
    <div>
        <div>
            {{#if blog.image}}
            <div>
                <img src="{{root}}{{blog.image}}" alt="{{blog.title}}">
            </div>
            {{/if}}
            <div>
                <article>
                    <div>
                        <div>
                            {{#if setting.blog.displayAuthor}}
                            <img src="{{root}}{{blog.author.avatar}}" alt="author" width="32" height="32">
                            <small>
                                {{blog.author.name}}<span>â€¢</span>
                            </small>
                            {{/if}}
                            <small>
                                {{blog.dateCreated}}
                            </small>
                        </div>
                        <h2>{{blog.title}}</h2>
                        {{#each blog.blocks}}
                        {{> component-editor }}
                        {{/each}}
                    </div>
                    {{#ifand setting.blog.displayTag setting.blog.displayShareButtons}}
                    <div>
                        {{#if setting.blog.displayTag}}
                        <div>
                            <span>Tags: &nbsp;</span>
                            {{#each blog.tags}}
                            <a href="{{@root.root}}blog-find.html?tag={{this}}">{{this}}</a>{{#unless @last}},&nbsp;{{/unless}}
                            {{/each}}
                        </div>
                        {{/if}}
                        {{#if setting.blog.displayShareButtons}}
                        <div>
                            <a data-id="fb">Share with Facebook</a>
                            <a data-id="tw">Share with Twitter</a>
                            <a data-id="pi">Share with Pinterest</a>
                            <a data-id="mail">Share with Mail</a>
                        </div>
                        {{/if}}
                    </div>
                    {{/ifand}}
                </article>
            </div>
        </div>
    </div>
</section>
<!-- section content end -->